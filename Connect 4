def handle_turn(player):
    global columnno1
    global columnno2
    global columnno3
    global columnno4
    global columnno5
    global columnno6
    global columnno7
    global nums
    columnno1 = [35, 28, 21, 14, 7, 0]
    columnno2 = [36, 29, 22, 15, 8, 1]
    columnno3 = [37, 30, 23, 16, 9, 2]
    columnno4 = [38, 31, 24, 17, 10, 3]
    columnno5 = [39, 32, 25, 18, 11, 4]
    columnno6 = [40, 33, 26, 19, 12, 5]
    columnno7 = [41, 34, 27, 20, 13, 6]

    print(player + "'s turn.")
    position = int(input("Choose a column(1-7): "))
    valid = False
    nums = [1, 2, 3, 4, 5, 6, 7]
    while not valid:
        while position not in nums:
            if position in nums:
                break
            position = int(input("Choose a column(1-7): "))
            break

        if board[position] == "-":
            valid = True

        else:
            print("You cant go there.")

        if position == 1:
            if board[35] == "-":
                board[35] = player
            elif board[28] == "-":
                board[28] = player
            elif board[21] == "-":
                board[21] = player
            elif board[14] == "-":
                board[14] = player
            elif board[7] == "-":
                board[7] = player
            elif board[0] == "-":
                board[0] = player

        elif position == 2:
            if board[36] == "-":
                board[36] = player
            elif board[29] == "-":
                board[29] = player
            elif board[22] == "-":
                board[22] = player
            elif board[15] == "-":
                board[15] = player
            elif board[8] == "-":
                board[8] = player
            elif board[1] == "-":
                board[1] = player

        elif position == 3:
            if board[37] == "-":
                board[37] = player
            elif board[30] == "-":
                board[30] = player
            elif board[23] == "-":
                board[23] = player
            elif board[16] == "-":
                board[16] = player
            elif board[9] == "-":
                board[9] = player
            elif board[2] == "-":
                board[2] = player

        elif position == 4:
            if board[38] == "-":
                board[38] = player
            elif board[31] == "-":
                board[31] = player
            elif board[24] == "-":
                board[24] = player
            elif board[17] == "-":
                board[17] = player
            elif board[10] == "-":
                board[10] = player
            elif board[3] == "-":
                board[3] = player

        elif position == 5:
            if board[39] == "-":
                board[39] = player
            elif board[32] == "-":
                board[32] = player
            elif board[25] == "-":
                board[25] = player
            elif board[18] == "-":
