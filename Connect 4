def check_if_tie():
    global game_still_going
    if "-" not in board:
        game_still_going = False
    return


def flip_player():
    global current_player
    if current_player == char1:
        current_player = char2

    elif current_player == char2:
        current_player = char1
    return


def play_game():
    print("\U0001F534\U0001F534\U0001F534\U0001F534 ğ˜¾ğ™¤ğ™£ğ™£ğ™šğ™˜ğ™© 4 \U0001F7E1\U0001F7E1\U0001F7E1\U0001F7E1\U0001F7E1")
    print()
    print(
        "...ğ—§ğ—µğ—² ğ—®ğ—¶ğ—º ğ—³ğ—¼ğ—¿ ğ˜ğ—µğ—² ğ—½ğ—¹ğ—®ğ˜†ğ—²ğ—¿ ğ—¶ğ˜€ ğ˜ğ—¼ ğ—ºğ—®ğ—¸ğ—² ğ—® ğ˜€ğ˜ğ—¿ğ—®ğ—¶ğ—´ğ—µğ˜ ğ—¹ğ—¶ğ—»ğ—² ğ—¼ğ—³ ğ—³ğ—¼ğ˜‚ğ—¿ ğ—¼ğ˜„ğ—» ğ—½ğ—¶ğ—²ğ—°ğ—²ğ˜€; ğ˜ğ—µğ—² ğ—¹ğ—¶ğ—»ğ—² ğ—°ğ—®ğ—» ğ—¯ğ—² ğ˜ƒğ—²ğ—¿ğ˜ğ—¶ğ—°ğ—®ğ—¹, ğ—µğ—¼ğ—¿ğ—¶ğ˜‡ğ—¼ğ—»ğ˜ğ—®ğ—¹ ğ—¼ğ—¿ ğ—±ğ—¶ğ—®ğ—´ğ—¼ğ—»ğ—®ğ—¹...")
    print()
    part1()
    display_board()
    while game_still_going:
        handle_turn(current_player)
        check_if_game_over()
        flip_player()
    if winner == char1 or winner == char2:
        if winner == char1:
            print(name1 + " won!\U0001F389")
        elif winner == char2:
            print(name2 + " won!\U0001F389")
    elif winner == None:
        print("Tie.")


play_game()
