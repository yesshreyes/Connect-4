def check_if_game_over():
    check_for_winner()
    check_if_tie()


def check_for_winner():
    global winner
    row_winner = check_rows()
    coloumn_winner = check_columns()
    diagonal_winner = check_diagonals()
    if row_winner:
        winner = row_winner

    elif coloumn_winner:
        winner = coloumn_winner

    elif diagonal_winner:
        winner = diagonal_winner
    else:
        winner = None

    return


